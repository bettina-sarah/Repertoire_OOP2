<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/cafeFiltre"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:tag="Café filtre"
            app:srcCompat="@drawable/cafe_filtre" />

        <ImageView
            android:id="@+id/americano"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:tag="Americano"
            app:srcCompat="@drawable/americano" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="0.2"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="99dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="Café filtre"
            android:textColor="#098A56"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="Americano"
            android:textColor="#098A56"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/cafeGlace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:tag="Café glacé"
            app:srcCompat="@drawable/cafe_glace" />

        <ImageView
            android:id="@+id/latte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:tag="Latté"
            app:srcCompat="@drawable/latte" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="47dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="Café glacé"
            android:textColor="#098A56"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="Latté"
            android:textColor="#098A56"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ChipLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingLeft="25dp"
        android:paddingRight="25dp">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/grandeurChips"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:singleSelection="true">

            <com.google.android.material.chip.Chip
                android:id="@+id/Petit"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:layout_marginRight="15dp"
                android:checkable="true"
                android:tag="Petit"
                android:text="Petit"
                app:checkedIcon="@drawable/crochet"
                app:closeIconVisible="false" />

            <com.google.android.material.chip.Chip
                android:id="@+id/Moyen"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:layout_marginRight="15dp"
                android:checkable="true"
                android:tag="Moyen"
                android:text="Moyen"
                app:checkedIcon="@drawable/crochet"
                app:closeIconVisible="false" />

            <com.google.android.material.chip.Chip
                android:id="@+id/Grand"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:layout_marginRight="15dp"
                android:checkable="true"
                android:tag="Grand"
                android:text="Grand"
                app:checkedIcon="@drawable/crochet"
                app:closeIconVisible="false" />

        </com.google.android.material.chip.ChipGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/previewText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:tag="previewText"
            android:text="preview Commande"
            android:textColor="#098A56" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:orientation="horizontal">

        <Button
            android:id="@+id/boutonAjouter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#098A56"
            android:enabled="false"
            android:tag="boutonAjouter"
            android:text="AJOUTER" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/previewImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:tag="previewImage"
            app:srcCompat="@drawable/americano" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="total: "
            android:textColor="#098A56"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0,00$"
            android:textColor="#098A56"
            android:textSize="34sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:orientation="horizontal">

        <Button
            android:id="@+id/boutonEffacer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:backgroundTint="#098A56"
            android:tag="boutonEffacer"
            android:text="EFFACER" />

        <Button
            android:id="@+id/boutonCommander"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="2.5"
            android:backgroundTint="#098A56"
            android:tag="boutonCommander"
            android:text="COMMANDER" />
    </LinearLayout>
</LinearLayout>